{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "pretty": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "typeRoots": ["node_modules/@types"],
        "paths": {
            "*": [
              "node_modules/*",
              "src/types/*"
            ]
          }
    },
    "include": [
        "src/tests/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}